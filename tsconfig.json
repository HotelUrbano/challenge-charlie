{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["DOM", "ES2016"],
    "sourceMap": true,
    "paths": {
      "@hooks/*": ["src/hooks/*"],
      "@adapters/*": ["src/adapters/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@helpers/*": ["src/helpers/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@external/*": ["src/external/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
